{
  "version": "2.0.0",
  "tasks": [
      {
          "type": "shell",
          "label": "shell: g++ build active file",
          "command": "/usr/bin/g++",
          "args": [
              "-g",
              "-Wall",
              "${workspaceFolder}/*/*.cpp",
              "${fileDirname}/*.cpp",
              "${workspaceFolder}/*/*.hpp",
              "${fileDirname}/*.hpp",
          ],
          "options": {
              "cwd": "/usr/bin"
          },
          "problemMatcher": [
              "$gcc"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          }
      }
  ]
}